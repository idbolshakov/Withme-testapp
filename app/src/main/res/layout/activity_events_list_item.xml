<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventWrapperLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/eventHeadLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:id="@+id/eventSportInfo"
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sportImage"
                android:src="@drawable/rounded_frame"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/sportName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Sport Name"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:textSize="10sp"
                android:ellipsize="end"
                android:maxLines="2" />
        </LinearLayout>

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Event Title"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/eventBody"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/eventPlace"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/placeImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_place_grey_24dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/eventPlaceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Place"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventTime"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/timeImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_access_time_grey_24dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/startTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Start Time"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventGroup"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/groupImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_group_grey_24dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/groupText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Group"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>



